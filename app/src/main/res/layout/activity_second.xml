<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieActivites.activity_second" android:orientation="vertical"
>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical" android:layout_height="match_parent">


            <RelativeLayout
                    android:id="@+id/rl1"

                    android:layout_width="match_parent"
                    android:layout_height="200sp">

                <ImageView
                        android:id="@+id/iview"
                        android:layout_width="match_parent"
                        android:layout_height="200sp" />

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/tv7"
                            android:layout_width="250sp"
                            android:layout_height="67sp"

                            android:layout_marginLeft="50sp"
                            android:layout_marginTop="130sp"
                            android:scrollbarSize="4sp"

                            android:text="TITLE"

                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="-2sp"
                    android:background="#324C58"
                    android:orientation="horizontal"
                    android:scrollbarSize="4sp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scrollbarSize="4sp">

                    <ImageView
                            android:id="@+id/imageview2"
                            android:layout_width="120sp"
                            android:layout_height="170sp"
                            android:layout_marginLeft="40sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="30sp"
                            android:layout_marginBottom="10sp"
                            android:scrollbarSize="4sp"
                            android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:scrollbarSize="4sp">

                    <ImageView
                            android:id="@+id/imagefav"
                            android:layout_width="42sp"
                            android:layout_height="38sp"
                            android:layout_marginLeft="95sp"
                            android:layout_marginTop="25sp"
                            android:layout_marginBottom="5sp"
                            android:background="#324C58"
                            android:scrollbarSize="4sp"
                            android:src="@drawable/ic_favorite_border" />

                    <TextView
                            android:id="@+id/tv1"
                            android:layout_width="match_parent"
                            android:layout_height="35sp"
                            android:scrollbarSize="4sp"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#324C58"
                            android:src="@drawable/ic_star_2" />

                    <TextView
                            android:id="@+id/tv3"
                            android:layout_width="80sp"
                            android:layout_height="45sp"
                            android:layout_marginLeft="30sp"
                            android:layout_marginTop="-20sp"
                            android:scrollbarSize="4sp"
                            android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:scrollbarSize="4sp">

                <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:layout_marginLeft="10sp"
                        android:fontFamily="sans-serif-black"
                        android:scrollbarSize="4sp"
                        android:text="Description"
                        android:textSize="22sp" />

                <TextView
                        android:id="@+id/tvoverview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:scrollbarSize="4sp"
                        android:text="TextView" />
            </LinearLayout>

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:scrollbarSize="4sp">

                <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:layout_marginLeft="10sp"
                        android:fontFamily="sans-serif-black"
                        android:scrollbarSize="4sp"
                        android:text="Cast"
                        android:textSize="22sp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rView20"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:scrollbarSize="4sp">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:scrollbarSize="4sp">

                <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:layout_marginLeft="10sp"
                        android:fontFamily="sans-serif-black"
                        android:scrollbarSize="4sp"
                        android:text="Similar Movies"
                        android:textSize="22sp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rView21"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:scrollbarSize="4sp">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:scrollbarSize="4sp">

                <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10sp"
                        android:fontFamily="sans-serif-black"
                        android:text="Trailer"
                        android:textSize="22sp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rView22"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>